<section id="container">
  <%= render 'layouts/admin_sidebar' %>
  <!-- **********************************************************************************************************************************************************
      MAIN CONTENT
      *********************************************************************************************************************************************************** -->
  <!--main content start-->
  <section id="main-content">
    <section class="wrapper">
      <br/>
      <h3><a href="/admin/users" ><i class="fa fa-angle-right"></i>Users</a></h3>
      <div class="row mt">
        <div class="col-lg-12">
          <div class="content-panel">
            <h4><i class="fa fa-angle-right"></i>User Profile</h4>
            <div style="margin: 0 10px 10px 0;text-align: right;">
              <%= link_to "Edit", edit_admin_user_path(@user), class:"btn btn-outline-secondary btn-sm"%>
            </div>
            <section id="unseen">
              <table class="table table-bordered table-striped table-condensed">
                <tr>
                  <th>id</th>
                  <td><%= @user.id%></td>
                </tr>
                <tr>
                  <th>name</th>
                  <td><%= @user.name%></td>
                </tr>
                <tr>
                  <th>email</th>
                  <td><%= @user.email%></td>
                </tr>
                <tr>
                  <th>admin</th>
                  <td>
                    <%if @user.admin?%>
                        Yes
                      <% else %>
                        No
                      <% end %>
                    </td>
                  </td>
                </tr>
                <tr>
                  <th>activated</th>
                  <td>
                    <%if @user.activated?%>
                        Yes
                      <% else %>
                        No
                      <% end %>
                    </td>
                  </td>
                </tr>
              </table>
            </section>
          </div>
          <!-- /content-panel -->
        </div>
        <!-- /col-lg-4 -->
      </div>
      <!-- /row -->
    </section>
    <!-- /wrapper -->
  </section>
  <!-- /MAIN CONTENT -->
  <!--main content end-->
</section><!--/container-->