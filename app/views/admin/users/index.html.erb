<section id="container">
  <%= render 'layouts/admin_sidebar' %>
  <!-- **********************************************************************************************************************************************************
      MAIN CONTENT
      *********************************************************************************************************************************************************** -->
  <!--main content start-->
  <section id="main-content">
    <section class="wrapper">
      <br/>
      <h3><a href="/admin/users"><i class="fa fa-angle-right"></i> Users</a></h3>
      <div class="row mt">
        <div class="col-lg-12">
          <div class="content-panel">
            <h4><i class="fa fa-angle-right"></i> User list</h4>
            <div style="margin: 0 10px 10px 0;text-align: right;">
              <%= link_to "New", new_admin_user_path, class:"btn btn-outline-secondary btn-sm"%>
            </div>
            <section id="unseen">
              <table class="table table-bordered table-striped table-condensed">
                <thead>
                  <tr>
                    <th>#</th>
                    <th class="numeric">name</th>
                    <th class="numeric">email</th>
                    <th class="numeric">admin</th>
                    <th class="numeric" colspan="2">manage</th>
                  </tr>
                </thead>
                <tbody>
                  <% @users.each.each do |user| %>
                  <tr>
                    <td><%= link_to user.id, admin_user_path(user) %></td>
                    <td><%=user.name%></td>
                    <td class="numeric"><%=user.email%></td>
                    <td class="numeric">
                      <%if user.admin%>
                        Yes
                      <% else %>
                        No
                      <% end %>
                    </td>
                    <td><%= link_to "Edit", edit_admin_user_path(user) %></td>
                    <td><%= link_to "Delete", admin_user_path(user), method: :delete , data: { confirm: "You sure?" }%></td>
                  </tr>
                  <% end %>
