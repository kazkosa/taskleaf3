<section id="container">
  <%= render 'layouts/admin_sidebar' %>
  <!-- **********************************************************************************************************************************************************
      MAIN CONTENT
      *********************************************************************************************************************************************************** -->
  <!--main content start-->
  <section id="main-content">
    <section class="wrapper">
      <h3><i class="fa fa-angle-right"></i><%= link_to "Tasks", admin_tasks_path%></h3>
      <div class="row mt">
        <div class="col-lg-12">
          <div class="content-panel">
            <h4><i class="fa fa-angle-right"></i>Edit Task</h4>
            <div style="margin: 0 10px 10px 0;text-align: right;">
              <%= link_to "Task Infomation", admin_task_path(@task), class:"btn btn-outline-secondary btn-sm"%>
            </div>
            <section id="unseen">
              <%= form_with model: @task, local: true, url: admin_task_path(@task) do |f| %>
                <%= render 'shared/error_task_messages' %>
                <%= render partial: "form", locals: { task: @task, f: f, mode_text: 'UPDATE' } %>
              <% end %>
            </section>
          </div>
          <!-- /content-panel -->
        </div>
        <!-- /col-lg-4 -->
      </div>
      <!-- /row -->
    </section>
    <!-- /wrapper -->
  </section>
  <!-- /MAIN CONTENT -->
  <!--main content end-->
</section><!--/container-->