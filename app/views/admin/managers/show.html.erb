<section id="container">
  <%= render 'layouts/admin_sidebar' %>
  <!-- **********************************************************************************************************************************************************
      MAIN CONTENT
      *********************************************************************************************************************************************************** -->
  <!--main content start-->
  <section id="main-content">
    <section class="wrapper">
      <h3><a href="/admin/managers" ><i class="fa fa-angle-right"></i> Managers</a></h3>
      <div class="row mt">
        <div class="col-lg-12">
          <div class="content-panel">
            <h4><i class="fa fa-angle-right"></i>Manager Profile</h4>
            <div style="margin: 0 10px 10px 0;text-align: right;">
              <%= link_to "Edit", edit_admin_manager_path(@manager), class:"btn btn-outline-secondary btn-sm"%>
            </div>
            <section id="unseen">
              <table class="table table-bordered table-striped table-condensed">
                <tr>
                  <th>id</th>
                  <td><%= @manager.id%></td>
                </tr>
                <tr>
                  <th>acount name</th>
                  <td><%= @manager.login_id%></td>
                </tr>
                <tr>
                  <th>admin</th>
                  <td>
                    <% if @manager.admin%>
                      Yes
                    <% else %>
                      No
                    <% end %>
                  </td>
                </tr>
              </table>
            </section>
          </div>
          <!-- /content-panel -->
        </div>
        <!-- /col-lg-4 -->
      </div>
      <!-- /row -->
    </section>
    <!-- /wrapper -->
  </section>
  <!-- /MAIN CONTENT -->
  <!--main content end-->
</section><!--/container-->