<section id="container">
  <%= render 'layouts/admin_sidebar' %>
  <!-- **********************************************************************************************************************************************************
      MAIN CONTENT
      *********************************************************************************************************************************************************** -->
  <!--main content start-->
  <section id="main-content">
    <section class="wrapper">
      <h3><i class="fa fa-angle-right"></i> Boards</h3>
      <div class="row mt">
        <div class="col-lg-12">
          <div class="content-panel">
            <h4><i class="fa fa-angle-right"></i>Board list</h4>
            <div style="margin: 0 10px 10px 0;text-align: right;">
              <%= link_to "New", new_admin_board_path, class:"btn btn-outline-secondary btn-sm"%>
            </div>
            <section id="unseen">
              <table class="table table-bordered table-striped table-condensed">
                <thead>
                  <tr>
                    <th>#</th>
                    <th class="numeric">Name</th>
                    <th class="numeric">Project</th>
                    <th class="numeric" colspan="2">Manage</th>
                  </tr>
                </thead>
                <tbody>
                  <% @boards.each do |board| %>
                  <tr>
                    <td><%= link_to board.id, admin_board_path(board) %></td>
                    <td><%= board.name %></td>
                    <td>
                      <%= link_to "#{board.project.id} / #{board.project.name}", admin_project_path(board.project) %>
                    </td>
                    <td class="numeric">
                      <%= link_to "Edit", edit_admin_board_path(board) %>
                    </td>
                    <td class="numeric">
                      <%= link_to "Delete", admin_board_path(board), method: :delete , data: { confirm: "You sure?" }%>
                    </td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </section>
          </div>
          <!-- /content-panel -->
        </div>
        <!-- /col-lg-4 -->
      </div>
      <!-- /row -->
    </section>
    <!-- /wrapper -->
  </section>
  <!-- /MAIN CONTENT -->
  <!--main content end-->
</section><!--/container-->