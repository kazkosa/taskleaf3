<!DOCTYPE html>
<html>
  <head>
    <title>TicketLine</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= javascript_packs_with_chunks_tag 'vendor.js' %>
    <%= stylesheet_packs_with_chunks_tag 'vendor.css' %>
    <%= stylesheet_pack_tag 'login' %>
    <%= javascript_pack_tag 'login' %>
  </head>
  <body>
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>
    <%= yield %>
    <div class="bg-cover">
      <%= image_bundle_tag 'images/login/19936.jpg' %>
    </div>
  </body>
</html>