<section>
  <div class="login-container show">
    <div class="card-panel" style="">
      <h1></h1>
      <p>Login</p>
      <div class="row">
        <%= form_with scope: :session, url: login_path, local: true , class: "col s12" do |f| %>
          <div class="row">
            <div class="input-field col s12">
              <%= f.email_field :email, class: "validate" %>
              <%= f.label :email, 'Email' %>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <%= f.password_field :password, class: "validate" %>
              <%= f.label :password, 'Password' %>
            </div>
          </div>
          <div class="row2">
            <div class="remember-check">
              <%= f.label :remember_me do %>
                <%= f.check_box :remember_me, class: "filled-in" %>
                <span>Remember me</span>
              <% end %>
            </div>
          </div>
          <br/>
          <%= f.submit "submit", class:"login_btn waves-effect waves-light btn-small cyan lighten-2" %>
        <% end %>
      </div>
    </div>
    <div class="card-panel append">
      <p class="note">Forgot password?&nbsp; <%= link_to "Reset Password", new_password_reset_path %></p>
      <br/>
      <p class="note">Don't have an account?&nbsp; <%= link_to "Sign up", signup_path %></p>
    </div>
  </div>
<section>